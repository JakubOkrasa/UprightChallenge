<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/txt_good_posture_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#8BC34A"
        android:fontFamily="sans-serif"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="104dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/txt_bad_posture_count"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="5dp"
        />

    <TextView
        android:id="@+id/txt_bad_posture_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#F44336"
        android:fontFamily="sans-serif"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="104dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_good_posture_count"
        android:layout_marginHorizontal="5dp"
        />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_bad_posture_count"
        android:layout_marginTop="50dp"
        android:text="test"
        android:textSize="25sp"
        android:onClick="testSth"
        android:id="@+id/test_btn"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/stats_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_bad_posture_count"
        android:padding="7dp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/notif_off_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notif_off_warning"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/Orange"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>