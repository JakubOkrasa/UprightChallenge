<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/notif_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        >

        <TextView
            android:id="@+id/notif_app_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="@string/app_name"
            android:textColor="@color/darkGrey"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/notif_question_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/posture_notif_question"
            android:textSize="@dimen/lockscreen_title_text_size"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_spine_launcher"

        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/notif_top_layout"
        >
        <Button
            android:id="@+id/notif_positive_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="@string/posture_notif_positive_label"
            android:textSize="@dimen/notif_btn_text_size"
            android:textFontWeight="600"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:textColor="@color/colorPrimaryDark"
            />

        <Button
            android:id="@+id/notif_negative_btn"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="@string/posture_notif_negative_label"
            android:textFontWeight="600"
            android:textSize="@dimen/notif_btn_text_size"
            android:textColor="@color/colorPrimaryDark"
            />

    </LinearLayout>



</RelativeLayout>